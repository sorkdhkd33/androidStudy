<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">


        <ImageView
            android:id="@+id/showImage_ImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="@+id/openGallery_button"
            app:layout_constraintStart_toStartOf="@+id/openGallery_button"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/showImage_ImageView2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="@+id/openGallery_button2"
            app:layout_constraintStart_toStartOf="@+id/openGallery_button2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/openGallery_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:text="openGallery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/openGallery_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="224dp"
            android:layout_marginLeft="224dp"
            android:text="openGallery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:layout_constraintBottom_toBottomOf="@+id/showImage_ImageView"
            app:layout_constraintEnd_toEndOf="@+id/openGallery_button"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/openGallery_button"
            app:layout_constraintTop_toTopOf="@+id/showImage_ImageView"
            app:srcCompat="@drawable/bolder" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:layout_constraintBottom_toBottomOf="@+id/showImage_ImageView2"
            app:layout_constraintEnd_toEndOf="@+id/openGallery_button2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/openGallery_button2"
            app:layout_constraintTop_toTopOf="@+id/showImage_ImageView2"
            app:srcCompat="@drawable/bolder" />

</androidx.constraintlayout.widget.ConstraintLayout>